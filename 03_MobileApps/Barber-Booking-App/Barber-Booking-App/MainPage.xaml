<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber_Booking_App.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">
            <Label Text="Appointment Booking"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />
            <Entry x:Name="entryName"
                   Placeholder="Full Name"
                   TextChanged="entryName_TextChanged" />
            <Entry x:Name="entryPhone"
                   Placeholder="Phone Number"
                   Keyboard="Telephone" />
            <DatePicker x:Name="datePicker"
                        DateSelected="datePicker_DateSelected"
                        Format="dd.MM.yyyy" />
            <TimePicker x:Name="timePicker"
                        PropertyChanged="timePicker_PropertyChanged"
                        Format="HH:mm" />
            <Picker x:Name="pickerService"
                    Title="Select a service"
                    SelectedIndexChanged="pickerService_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Haircut</x:String>
                    <x:String>Coloring</x:String>
                    <x:String>Styling</x:String>
                    <x:String>Beard Trim</x:String>
                </Picker.Items>
            </Picker>
            <HorizontalStackLayout Spacing="10">
                <Label x:Name="labelPersons"
                       Text="Number of people: 1"
                       VerticalOptions="Center" />
                <Stepper x:Name="stepperPersons"
                         Minimum="1"
                         Maximum="5"
                         Value="1"
                         ValueChanged="stepperPersons_ValueChanged" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10">
                <CheckBox x:Name="checkSms"
                          CheckedChanged="checkSms_CheckedChanged" />
                <Label Text="I want an SMS reminder"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
            <Label x:Name="labelSummary"
                   Text="Booking Summary"
                   FontAttributes="Italic" />
            <Button Text="Book Appointment"
                    Clicked="Button_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>